###  Navigation Shit  ###
cdls() { cd "$@" && ls; } # Combo command
alias cd='cdls'
alias c='cdls'
alias C='cdls'
alias go='cdls'
alias goto='cdls'
alias ..='cd ..'
alias ,,='cd ..'
alias up='cd ..'
alias ...='cd .. && cd ..'
alias ....='cd /'
alias ~='cd ~'
alias home='cd ~'
alias 1='cd ~'
alias 2='cd -'
alias back='cd -'
alias 3='cd /'
alias breadcrumb='pwd'
alias current='pwd'
alias whereami='pwd'
alias here='pwd'
alias search='find'
alias locate='find'
alias cl='clear'
alias www='cd /var/www/public_html'
alias html='cd /var/www/public_html'

