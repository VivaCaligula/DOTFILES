###  Just The LS Shit  ###
superls() { colorls "$@" -a -sd && printf "\n"; } # Wombo combo.
alias ls='superls'
alias l='superls'
superlsl() { colorls "$@" -a -l -sd && printf "\n"; } 
# alias la='superlsl'
# alias lsa='superlsl'
# alias lal='superlsl'
alias la='k -ah'
alias lsa='k -ah'
alias lal='k -ah'
lsfiles() { colorls "$@" -a -f -sf && printf "\n"; }
alias files='lsfiles'
lsfolders() { colorls "$@" -a -d -sd && printf "\n"; }
alias folders='lsfolders'
lsreport() { colorls "$@" -a -sd -r && printf "\n"; }
