label-separator-foreground = ${colors.color1}

; lock
menu-0-0 = " ÔÄ£ "
menu-0-0-exec = bash ~/scripts/lock.sh
menu-0-0-foreground = ${colors.background}
; sleep
menu-0-1 = " Ôà∂ "
menu-0-1-exec = bash ~/scripts/lock.sh && systemctl suspend
menu-0-1-foreground = ${colors.background}
; logout
menu-0-2 = " ÔÇã "
menu-0-2-exec = pkill x
menu-0-2-foreground = ${colors.background}
; reboot
menu-0-3 = " ÔÄ° "
menu-0-3-exec = systemctl reboot
menu-0-3-foreground = ${colors.background}
; shutdown
menu-0-4 = " ÔÄë"
menu-0-4-exec = systemctl poweroff
menu-0-4-foreground = ${colors.background}
; end stripe
menu-0-5 = "ÔÅî "
menu-0-5-font = 6
menu-0-5-foreground = ${colors.color1}


